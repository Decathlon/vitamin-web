{
  "name": "vitamin-web",
  "private": true,
  "keywords": [
    "design-system",
    "ui-kit",
    "libraries"
  ],
  "bugs": {
    "url": "https://github.com/Decathlon/vitamin-web/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Decathlon/vitamin-web.git"
  },
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "format": "lerna run format",
    "postinstall": "npx husky install",
    "eslint": "eslint *.js && lerna run --parallel eslint",
    "eslint:fix": "eslint *.js && lerna run --parallel eslint:fix",
    "pack": "lerna run pack",
    "prettier": "prettier .",
    "prettier:fix": "prettier . --write",
    "publish": "lerna publish from-package --ignore-prepublish --no-git-reset --yes",
    "stylelint": "lerna run stylelint",
    "stylelint:fix": "lerna run stylelint:fix",
    "test": "lerna run test"
  },
  "lint-staged": {
    "./packages/**/*.{js,jsx,ts,tsx}": [
      "yarn run prettier:fix",
      "yarn run eslint:fix",
      "yarn run stylelint:fix",
      "sort-package-json \"package.json\" \"packages/*/package.json\""
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.6",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "sort-package-json": "^1.48.0"
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.19.1",
    "node": "^12 || ^14"
  },
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ]
}
