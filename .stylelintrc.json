{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "ignoreFiles": ["**/dist/**/*.css", "packages/sources/css/src/design-tokens/src/base-colors.css", "packages/sources/css/src/design-tokens/src/themes/**/*.css"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "layer",
          "screen"
        ]
      }
    ],
    "no-duplicate-selectors": null,
    "declaration-block-trailing-semicolon": null,
    "no-descending-specificity": null,
    "selector-class-pattern": null,
    "custom-property-pattern": null
  }
}
